<% layout('layouts/layout') -%>
<h2 class="page-header">Profile</h2>
<% if(typeof errors == 'object' && errors){ %>
	<% errors.forEach(function(err){ %>	
		<div class='alert alert-danger'><%= err.msg %>
		</div>
	<% }); %>
<% } %>
<div class="card">
    <img src="<%= user.photoPic%>" id="img-preview" />
    <label class="file-upload-container" for="file-upload">
    	<input id="file-upload" type="file" style="display:none;">
    	Select an Image
    </label>
</div>
	<form method="post" action="/profile" style="width: 50%">
        <input type="hidden" class="form-control" name="photo" value="<%= user.photoPic%>">
        <input type="hidden" class="form-control" name="id" value="<%= user.id%>">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" value="<%= user.name%>" name="name">
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" value="<%= user.email%>" name="email">
        </div>
        <button class="btn btn-primary" id='changebtn'>Change Password</button>
        <div class='change-password'>
            <div class="form-group">
                <label>Old Password</label>
                <input type="password" class="form-control" placeholder="Password" name="oldpassword">
            </div>
            <div class="form-group">
                <label>New Password</label>
                <input type="password" class="form-control" placeholder="Password" name="newpassword">
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input type="password" class="form-control" placeholder="Password" name="newpassword2">
            </div>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
<script type="text/javascript" src="/js/profile.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>